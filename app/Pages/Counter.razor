@page "/counter"
@inject HttpClient Http

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<p>Message: @message</p>

<button class="btn btn-primary" @onclick="GetMessage">Salutation</button>

<p>Another Message: @anotherMessage</p>

<button class="btn btn-primary" @onclick="GetAnotherMessage">Au revoir</button>

@code {
    private int currentCount = 0;

    private string message = "Hi";

    private string anotherMessage = "Ciao";

    private void IncrementCount()
    {
        currentCount++;
    }

    private async Task GetMessage()
    {
        var temp = await Http.GetStringAsync("/api/JustHello?name=cloudies");
        message = temp;
    }

    private async Task GetAnotherMessage()
    {
        var temp = await Http.GetStringAsync("/api/JustBye?name=azuries");
        anotherMessage = temp;
    }
}
